{
	"name": "@mattrax/monorepo",
	"private": true,
	"scripts": {
		"postinstall": "node patches/solid-start-ts-nocheck",
		"dev": "pnpm --filter @mattrax/forge dev",
		"landing": "pnpm --filter @mattrax/landing --",
		"email": "pnpm --filter @mattrax/email --",
		"doc": "pnpm --filter @mattrax/docs --",
		"db:push": "drizzle-kit push:mysql && bun run ./apps/forge/src/db/rust.ts",
		"db:studio": "drizzle-kit studio",
		"db:gen": "bun run ./apps/forge/src/db/rust.ts",
		"typecheck": "tsc -b",
		"lint": "biome lint .",
		"format": "biome format --write ."
	},
	"engines": {
		"node": ">=18"
	},
	"dependencies": {
		"@biomejs/biome": "^1.6.0",
		"dotenv": "^16.4.5",
		"drizzle-kit": "^0.20.14",
		"mysql2": "^3.9.2",
		"typescript": "^5.4.2"
	},
	"pnpm": {
		"patchedDependencies": {
			"drizzle-kit@0.20.14": "patches/drizzle-kit@0.20.14.patch",
			"@solid-mediakit/trpc@2.0.2": "patches/@solid-mediakit__trpc@2.0.2.patch"
		}
	}
}
