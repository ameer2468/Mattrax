{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"files": {
		"include": [
			"apps/*/src/**/*.js",
			"apps/*/src/**/*.ts",
			"apps/*/src/**/*.tsx",
			"packages/*/src/**/*.js",
			"packages/*/src/**/*.ts",
			"packages/*/src/**/*.tsx"
		],
		"ignore": [".next", "auto-import.d.ts"]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off"
			},
			"style": {
				"noNonNullAssertion": "off"
			}
		}
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true,
		"defaultBranch": "main"
	}
}
