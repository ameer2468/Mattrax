{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"files": {
		"include": [
			"apps/*/**/*.js",
			"apps/*/**/*.ts",
			"apps/*/**/*.tsx",
			"apps/*/*.js",
			"apps/*/*.ts",
			"apps/*/*.tsx",
			"packages/*/**/*.js",
			"packages/*/**/*.ts",
			"packages/*/**/*.tsx",
			"packages/*/*.js",
			"packages/*/*.ts",
			"packages/*/*.tsx"
		],
		"ignore": [".next", "auto-import.d.ts", "node_modules", "dist"]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off"
			},
			"style": {
				"noNonNullAssertion": "off"
			}
		}
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true,
		"defaultBranch": "main"
	}
}
